<P>Hola Mundo</P>

<canvas id="micanvas" style="width : 400px ; height : 200px ; border : 1px black solid ;">

  <script type="text/javascript">

var context = document.querySelector("#micanvas").getContext('2d');
context.beginPath();
context.fillStyle = "red";
context.strokeStyle="black";
context.arc(50, 50, 5, 0, 2 * Math.PI, false);
context.fill();
context.stroke();
context.closePath();

</script>
</canvas>
