<P>Hola Mundo</P>
<canvas id="micanvas" style="width : 900px ; height : 700px ; border : 1px black solid ;">
</canvas>
 <script type="text/javascript">
 
 var context = document.querySelector("#micanvas").getContext('2d');
context.beginPath();
context.fillStyle = "#40C4FF";
context.strokeStyle="#40C4FF";
context.arc(50, 50, 100, 0, 2 * Math.PI, false);
context.fill();
context.stroke();
context.closePath();
</script>



